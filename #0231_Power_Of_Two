class Solution(object):
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        if (n <= 0):
            return False
        else:
            while (n%2 == 0):
                n /= 2 #也可以 n>>=1
            return n == 1
-------------------
class Solution(object):
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        if n <= 0:
            return False
        if n == 1:
            return True
        while n%2 == 0:
            return self.isPowerOfTwo(n/2)
