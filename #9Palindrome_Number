class Solution(object):
    def isPalindrome(self, x):
        """
        :type x: int
        :rtype: bool
        """
        if (x < 0):
            return False
        else:
            converted_str = str(x)
            i = 0
            while (converted_str[i] == converted_str[-(i + 1)]):
                if (i == len(converted_str)//2):
                    return True
                else:
                    i+=1
            return False
